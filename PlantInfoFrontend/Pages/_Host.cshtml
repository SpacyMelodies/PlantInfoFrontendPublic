@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace PlantInfoFrontend.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="PlantInfoFrontend.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="/images/seedling.256x252.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script>
        /* Change dropdown selection on button click using JS */
        function setSelectedIndex(el, index) {
            el.selectedIndex = index;
            el.dispatchEvent(new Event('change', { bubbles: true }))
        }

        function OnPlantChange() {
            const plants = document.getElementsByClassName("plantButton");
            for (const plant of plants) {
                plant.addEventListener('click', () => {
                    const plantSelector = document.getElementById("plants");
                    if (plant.id == "0") {
                        setSelectedIndex(plantSelector, 0);
                    }
                    else if (plant.id == "1") {
                        setSelectedIndex(plantSelector, 1);
                    }
                    else if (plant.id == "2") {
                        setSelectedIndex(plantSelector, 2);
                    }
                    else if (plant.id == "3") {
                        setSelectedIndex(plantSelector, 3);
                    }
                    else if (plant.id == "4") {
                        setSelectedIndex(plantSelector, 4);
                    }
                    else {
                        setSelectedIndex(plantSelector, 0);
                    }
                })
            }
        }
    </script>
</body>
</html>
